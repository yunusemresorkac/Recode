<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    android:foreground="?selectableItemBackground"
    android:layout_margin="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/gradient_bg"
        android:padding="@dimen/_6sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@color/white"
            android:fontFamily="@font/sugarsnow"
            android:id="@+id/time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="orderTitle"
            android:textColor="@color/white"

            android:fontFamily="@font/alata"
            android:id="@+id/orderTitle"/>


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/status"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/coin_svgrepo_com__1_"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@id/orderTitle"
            android:id="@+id/priceImage"/>

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderTitle"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_toEndOf="@id/priceImage"
            android:fontFamily="@font/alata"
            android:text="price"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderKey"
            android:layout_below="@id/orderPrice"
            android:text="asff"
            android:textColor="@color/white"
            android:fontFamily="@font/alata"
            android:textSize="16sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


