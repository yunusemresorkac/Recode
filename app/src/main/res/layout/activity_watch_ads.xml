<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"

    android:orientation="vertical"
    tools:context=".activities.WatchAdsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        app:title=""
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watch_amp_earn"
            android:fontFamily="@font/sugarsnow"
            android:textColor="#FFEB3B"
            android:textSize="16sp"/>



    </androidx.appcompat.widget.Toolbar>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_centerInParent="true"
        app:cardElevation="@dimen/_2sdp"
        android:id="@+id/watchAdsCard"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/_8sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_bg"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/menuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menuImage"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/sugarsnow"
                android:maxLines="1"
                android:text="WATCH ADS"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/menuImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/eye_open_svgrepo_com"
                tools:ignore="MissingConstraints" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POINTS"
        android:textColor="#FFEB3B"
        android:id="@+id/watchadspointinfo"
        android:fontFamily="@font/sugarsnow"
        android:textSize="20sp"
        android:layout_below="@id/watchAdsCard"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_centerInParent="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adsPoint"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_below="@id/watchadspointinfo"
        android:layout_centerInParent="true"
        android:text="0"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/sugarsnow"
        android:textColor="#FFEB3B"
        android:textSize="18sp"/>


</RelativeLayout>