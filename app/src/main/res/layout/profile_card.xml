<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/namelay"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sugarsnow"
            android:text="afsafsas"
            android:textColor="#FFEB3B"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pencil_svgrepo_com"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_bg"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@id/namelay"
        android:padding="@dimen/_4sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/person_fill_svgrepo_com"
            android:id="@+id/profileImage"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:id="@+id/divider"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_gravity="center"
            android:layout_below="@id/profileImage"
            android:background="@color/black"
            android:layout_marginTop="@dimen/_3sdp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/divider"
            android:gravity="left"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dollarImage"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/wallet_with_money_svgrepo_com"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
              />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dollars"
                android:id="@+id/dollarInfo"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/dollarImage"
                android:fontFamily="@font/sugarsnow"

                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toEndOf="@id/dollarImage"

                android:textStyle="bold"
                android:fontFamily="@font/sugarsnow"
                android:maxLines="1"
                android:id="@+id/dollarText"
                android:layout_below="@id/dollarInfo"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/centerdivider"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/exchange_svgrepo_com__1_" />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:id="@+id/pointImage"
                android:src="@drawable/earnings_income_wallet_svgrepo_com"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:id="@+id/pointinfo"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_toStartOf="@id/pointImage"
                android:fontFamily="@font/sugarsnow"

                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toStartOf="@id/pointImage"

                android:textStyle="bold"
                android:fontFamily="@font/sugarsnow"
                android:maxLines="1"
                android:id="@+id/pointText"
                android:layout_below="@id/dollarInfo"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>



        </RelativeLayout>




    </RelativeLayout>



</RelativeLayout>