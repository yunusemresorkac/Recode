<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/main_bg"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/red_dimond_premium_svgrepo_com"
            android:layout_margin="4dp"
            android:id="@+id/preImage"/>

        <TextView
            android:id="@+id/preText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preImage"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/sugarsnow"
            android:text="@string/get_premium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/preInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preText"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/sugarsnow"
            android:gravity="center"
            android:text="@string/upgrade_your_account_to_premium_and_enjoy_the_app_without_ads"
            android:textColor="@color/white"
            android:textSize="15sp" />



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seePre"
            android:layout_below="@id/preInfo"
            android:text="@string/get_premium"
            android:fontFamily="@font/sugarsnow"
            android:layout_margin="@dimen/_20sdp"
            android:textSize="20sp"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>